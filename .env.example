# ====================================
# OpenRouter API Configuration
# ====================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Set a default model (e.g., "openai/gpt-4", "anthropic/claude-3-opus-20240229")
OPENROUTER_DEFAULT_MODEL=openai/gpt-3.5-turbo

# ====================================
# Supabase Configuration
# ====================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service role key for server-side operations (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (for migrations and direct database access)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ====================================
# Application Configuration
# ====================================
# The URL where your app is hosted
PUBLIC_APP_URL=http://localhost:5173

# App name (used in emails, meta tags, etc.)
PUBLIC_APP_NAME=SvelteKit Accelerator

# ====================================
# Authentication Configuration
# ====================================
# JWT secret for session management (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here

# OAuth providers (optional - configure in Supabase dashboard)
# PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# PUBLIC_GITHUB_CLIENT_ID=your_github_client_id

# ====================================
# Email Configuration (optional)
# ====================================
# SMTP settings for transactional emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
# SMTP_FROM=noreply@example.com

# ====================================
# Storage Configuration
# ====================================
# Maximum file upload size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# ====================================
# Development Configuration
# ====================================
# Enable debug mode (set to false in production)
DEBUG=true

# Node environment
NODE_ENV=development
