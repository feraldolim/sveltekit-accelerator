{
	"name": "sveltekit-accelerator",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
		"deploy:preview": "npm run build && wrangler pages deploy .svelte-kit/cloudflare --branch=preview",
		"cf:login": "wrangler login",
		"cf:dev": "wrangler pages dev .svelte-kit/cloudflare",
		"shadcn:add": "npx shadcn-svelte@latest add"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-cloudflare": "^7.0.5",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/marked": "^5.0.2",
		"@types/uuid": "^10.0.0",
		"@vitest/ui": "^3.2.4",
		"bits-ui": "^2.8.11",
		"clsx": "^2.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"formsnap": "^2.0.1",
		"globals": "^16.0.0",
		"happy-dom": "^18.0.1",
		"jsdom": "^26.1.0",
		"mode-watcher": "^1.1.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.24.4"
	},
	"dependencies": {
		"@supabase/auth-helpers-sveltekit": "^0.13.0",
		"@supabase/supabase-js": "^2.51.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"bcryptjs": "^3.0.2",
		"lucide-svelte": "^0.525.0",
		"marked": "^16.0.0",
		"uuid": "^11.1.0"
	}
}
